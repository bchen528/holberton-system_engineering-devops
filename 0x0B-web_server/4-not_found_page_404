#!/usr/bin/env bash
# Configure your Nginx server to have a custom 404 page that contains the string Ceci n'est pas une page
NEW_STRING="\\\t#error_page 404 /custom_404.html;\n\t#location = /custom_404.html {\n\t#\troot /usr/share/nginx/html;\n\t#\tinternal;\n\t#}\n"

echo "Ceci n'est pas une page" | sudo tee /usr/share/nginx/html/custom_404.html > /dev/null
sudo sed -i "43i $NEW_STRING" /etc/nginx/sites-available/default
sudo service nginx restart
