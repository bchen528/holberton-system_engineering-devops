# Upstart config that starts a Gunicorn instance to serve
# web_dynamic/2-hbnb.py from AirBnB_clone_v4

description "Gunicorn application server running AirBnB_clone_v3"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
setuid ubuntu
setgid www-data

env PATH=/home/ubuntu/AirBnB_clone_v4/airbnb4_env/bin
chdir /home/ubuntu/AirBnB_clone_v4/web_dynamic
exec gunicorn --bind 0.0.0.0:8003 2-hbnb:app
