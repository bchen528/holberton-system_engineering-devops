# Upstart config that starts a Gunicorn instance to serve 
# api/v1/app.py from AirBnB_clone_v3

description "Gunicorn application server running AirBnB_clone_v3"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
setuid ubuntu
setgid www-data

env PATH=/home/ubuntu/AirBnB_clone_v3/airbnb3_env/bin
chdir /home/ubuntu/AirBnB_clone_v3/api/v1
exec gunicorn --bind 0.0.0.0:8002 app:app

